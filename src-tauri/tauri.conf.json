{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DesignGuard",
  "version": "0.1.0",
  "identifier": "com.designguard.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1421"
  },
  "app": {
    "windows": [
      {
        "title": "DesignGuard",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/DesignGuard.icns",
      "icons/DesignGuard.ico"
    ]
  }
}
